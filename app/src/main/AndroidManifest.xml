        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".Problem01_ImageActivity" />
        <activity android:name=".Problem02_GlideActivity" />
        <activity android:name=".Problem03_SlidingConflictActivity" />
        <activity android:name=".Problem04_ShapeSourceActivity" />
        <activity android:name=".Problem05_EventBusActivity" />
        <activity android:name=".Problem06_EventDispatchActivity" />
