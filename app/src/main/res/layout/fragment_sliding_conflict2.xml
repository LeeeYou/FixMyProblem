<?xml version="1.0" encoding="utf-8"?>
<com.example.leeeyou.fixmyproblem.custom_view.MScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e8e8e8">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_game_rule_desc"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/ripple_item_clicked_white"
            android:drawableBottom="#e8e8e8"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="淘汰赛"
            android:textColor="#2d2d37"
            android:textSize="16sp" />

        <com.example.leeeyou.fixmyproblem.custom_view.MSinaSportView
            android:id="@+id/sinasport_knockout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_below="@id/tv_game_rule_desc"
            android:background="#f9fafb"
            android:scrollbars="none" />

        <View
            android:id="@+id/view_line"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_below="@+id/sinasport_knockout" />


        <LinearLayout
            android:id="@+id/ll_scoreboard"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_below="@+id/view_line"
            android:background="@drawable/ripple_item_clicked_white"
            android:visibility="visible">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="积分榜"
                android:textColor="#2d2d37"
                android:textSize="15sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="场次"
                android:textColor="#2d2d37"
                android:textSize="15sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="胜负平"
                android:textColor="#2d2d37"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_scoreboard"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingRight="12dp"
                android:text="积分"
                android:textColor="#2d2d37"
                android:textSize="15sp" />

        </LinearLayout>

        <com.example.leeeyou.fixmyproblem.custom_view.MListView
            android:id="@+id/lv_scoreboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_scoreboard"
            android:visibility="visible" />

    </RelativeLayout>
</com.example.leeeyou.fixmyproblem.custom_view.MScrollView>

