<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:layout_margin="10dp"
            android:background="@drawable/shape_corners_solid"
            android:gravity="center"
            android:text="实心圆角框" />

        <Button
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:layout_margin="10dp"
            android:background="@drawable/shape_corners_stroke"
            android:text="空心圆角框" />

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:background="@drawable/shape_circle_solid"
            android:text="实心圆形框" />

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:background="@drawable/shape_circle_stroke"
            android:text="空心圆形框" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_margin="10dp"
            android:background="@drawable/selector_half_rect"
            android:padding="10dp"
            android:text="半圆角矩形,带按下效果" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_margin="10dp"
            android:background="@drawable/ripple_half_rect_stroke_blue"
            android:padding="10dp"
            android:text="半圆角矩形,带 ripple 按下效果" />

        <Button
            android:layout_width="250dp"
            android:layout_height="48dp"
            android:layout_margin="10dp"
            android:background="@drawable/shape_arc_stroke"
            android:text="实心圆弧框" />

        <ImageView
            android:layout_width="4dp"
            android:layout_height="4dp"
            android:layout_margin="10dp"
            android:background="@drawable/shape_dot_solid" />

        <ImageView
            android:layout_width="1dp"
            android:layout_height="300dp"
            android:layout_margin="10dp"
            android:background="@drawable/shape_line_solid_vertical" />

        <ImageView
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:layout_margin="10dp"
            android:background="@drawable/shape_line_solid_horizontal" />
    </LinearLayout>
</ScrollView>